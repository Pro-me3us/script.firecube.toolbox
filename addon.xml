<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.firecube.toolbox"
       name="Fire Cube Toolbox"
       version="1.2.0"
       provider-name="pro-me3us">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py" />
    <extension point="xbmc.addon.metadata">
        <summary>Amazon Fire TV Cube custom scripts</summary>
        <description>CoreELEC and bootup customizations, includes copying CE to eMMC, syncing BT remotes between FireOS/CE, changing boot order, and more. </description>
        <platform>all</platform>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/skins/Default/media/fanart.png</fanart>
            <screenshot>resources/screenshots/screenshot.png</screenshot>
        </assets>
    </extension>
</addon>
